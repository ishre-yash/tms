---
const packages = [
  {
    image:
      "https://images.unsplash.com/photo-1667296659532-9670a076adeb?q=80&w=1303&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    title: "TUNgnath",
    rating: 5,
    price: 599,
    link: "#",
  },
];
---

<section
  class="mx-auto max-w-screen-xl px-4 py-12 sm:px-6 lg:px-8 lg:py-16"
  id="package"
>
  <div class="max-w-xl mb-10 md:mx-auto sm:text-center lg:max-w-2xl md:mb-12">
    <h2
      class="max-w-lg mb-6 text-center text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl md:mx-auto"
    >
      Package
    </h2>
    <p class="text-base text-gray-700 md:text-lg">
      Lorem ipsum dolor sit amet, consectetur adipisicing elit. Doloribus
      aliquid iusto,
    </p>
  </div>
  <div class="grid row-gap-8 sm:row-gap-0 sm:grid-cols-2 lg:grid-cols-3">
    {
      packages.map((p) => {
        return (
          <div class="w-full max-w-sm bg-white border border-gray-200 rounded-lg shadow">
            <a href={p.link}>
              <img
                class="pb-4 h-80 bg-cover w-full rounded-t-lg"
                src={p.image}
                alt={p.title}
              />
            </a>
            <div class="px-5 pb-5">
              <a href="#">
                <h5 class="text-xl font-semibold tracking-tight text-gray-900">
                  {p.title}
                </h5>
              </a>
              <div class="flex items-center mt-2.5 mb-5">
                <div class="flex items-center space-x-1 rtl:space-x-reverse">
                  {Array(5)
                    .fill(0)
                    .map((_, index) => {
                      if (index < p.rating) {
                        return (
                          <svg
                            class="w-4 h-4 text-yellow-300"
                            aria-hidden="true"
                            xmlns="http://www.w3.org/2000/svg"
                            fill="currentColor"
                            viewBox="0 0 22 20"
                          >
                            <path d="M20.924 7.625a1.523 1.523 0 0 0-1.238-1.044l-5.051-.734-2.259-4.577a1.534 1.534 0 0 0-2.752 0L7.365 5.847l-5.051.734A1.535 1.535 0 0 0 1.463 9.2l3.656 3.563-.863 5.031a1.532 1.532 0 0 0 2.226 1.616L11 17.033l4.518 2.375a1.534 1.534 0 0 0 2.226-1.617l-.863-5.03L20.537 9.2a1.523 1.523 0 0 0 .387-1.575Z" />
                          </svg>
                        );
                      }
                    })}
                </div>
                <span class="bg-blue-100 text-blue-800 text-xs font-semibold px-2.5 py-0.5 rounded ms-3">
                  {p.rating}
                </span>
              </div>
              <div class="flex items-center justify-between">
                <span class="text-3xl font-bold text-gray-900">â‚¹{p.price}</span>
                <a
                  href="#"
                  class="text-white bg-blue-600 hover:bg-blue-500 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center"
                >
                  Book Now
                </a>
              </div>
            </div>
          </div>
        );
      })
    }
  </div>
</section>
